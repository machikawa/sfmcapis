deExternalKey = 'zzzzzzz' # DE ã®å¤–éƒ¨ã‚­ãƒ¼ã‚’å…¥
columnArray = ["ContactKey","Name","Email"] #DEã®åˆ—åã‚’åˆ—æŒ™ã™ã‚‹
valueArray = ["PythonSubs","ãŸã†ã‚“ã‚Šã°ãƒ¼","pyuser"] #åŸºæœ¬ã¨ãªã‚‹DEã®è¡Œãƒ‡ãƒ¼ã‚¿ã€€
